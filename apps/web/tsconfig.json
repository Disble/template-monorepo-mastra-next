{
  "extends": "@repo/typescript-config/nextjs.json",
  "compilerOptions": {
    "plugins": [
      {
        "name": "next"
      }
    ],
    "skipLibCheck": true,
    "paths": {
      "#*": ["./src/*"],
      "#mastra/*": ["../../packages/shared-types/src/mastra/*"],
      "@repo/shared-types/*": ["../../packages/shared-types/src/*"]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "next-env.d.ts",
    "next.config.ts",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules", ".next", "../../node_modules"],
  "references": [
    {
      "path": "../../packages/shared-types"
    }
  ]
}
